@model IEnumerable<Lab.Application.DTOs.GenreDTO>

<h2>Genres</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Is Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Name</td>
                <td>@genre.Description</td>
                <td>@genre.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@genre.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@genre.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
