@model Lab.Application.DTOs.CartDetailDTO

<div class="container mt-5">
    <h2>Create New Cart Detail</h2>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="CartId" class="form-label">Cart ID</label>
            <input asp-for="CartId" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="BookId" class="form-label">Book ID</label>
            <input asp-for="BookId" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="text" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>