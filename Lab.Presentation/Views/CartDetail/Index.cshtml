@model IEnumerable<Lab.Application.DTOs.CartDetailDTO>

<div class="container mt-5">
    <h2 class="mb-4">Cart Details</h2>

    <a class="btn btn-primary mb-3" asp-action="Create">Create New Cart</a>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Cart ID</th>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CartId</td>
                    <td>@item.Book?.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

