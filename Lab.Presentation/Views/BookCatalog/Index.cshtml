@model IEnumerable<Lab.Application.DTOs.BookCatalogDTO>

<div class="container mt-5">
    <h2 class="mb-4">Book Catalogs</h2>

    <a class="btn btn-primary mb-3" asp-action="Create">Create New Book Catalog</a>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Book</th>
                <th>Catalog</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book?.Title</td>
                    <td>@item.Catalog?.Title</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-secondary" asp-route-bookId="@item.BookId" asp-action="Details" asp-route-catalogId="@item.CatalogId">Details</a> |
                        <a class="btn btn-sm btn-danger" asp-route-bookId="@item.BookId" asp-action="Delete" asp-route-catalogId="@item.CatalogId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
