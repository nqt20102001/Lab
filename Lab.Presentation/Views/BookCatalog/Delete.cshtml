@model Lab.Application.DTOs.BookCatalogDTO

<h2>Delete Book Catalog</h2>

<h4>Are you sure you want to delete this association?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Book</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>

    <dt class="col-sm-2">Catalog</dt>
    <dd class="col-sm-10">@Model.Catalog?.Title</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookId" />
    <input type="hidden" asp-for="CatalogId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
