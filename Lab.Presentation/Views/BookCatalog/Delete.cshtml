@model Lab.Application.DTOs.BookCatalogDTO

<div class="container mt-5">
    <h2>Delete Book Catalog</h2>

    <div class="alert alert-danger mt-4" role="alert">
        Are you sure you want to delete this book catalog?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>

        <dt class="col-sm-2">Catalog</dt>
        <dd class="col-sm-10">@Model.Catalog?.Title</dd>

    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" asp-for="CatalogId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
