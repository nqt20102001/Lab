@model IEnumerable<Lab.Application.DTOs.UserDTO>

<div class="container mt-5">
    <h2 class="mb-4">Users</h2>

    <a class="btn btn-primary mb-3" asp-action="Create">Create New User</a>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Address</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info text-white" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@user.Id">Details</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
