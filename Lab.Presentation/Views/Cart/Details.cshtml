@model Lab.Application.DTOs.CartDTO

<h2>Cart Details</h2>

<div>
    <h4>Cart ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.Username</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Cart Details</dt>
        <dd class="col-sm-10">
            @if (Model.CartDetails != null && Model.CartDetails.Any())
            {
                <ul>
                    @foreach (var detail in Model.CartDetails)
                    {
                        <li>Book: @detail.Book?.Title, Quantity: @detail.Quantity, Price: @detail.Price</li>
                    }
                </ul>
            }
            else
            {
                <p>No cart details available.</p>
            }
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
