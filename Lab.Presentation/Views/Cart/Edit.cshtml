@model Lab.Application.DTOs.CartDTO

<div class="container mt-5">
    <h2>Edit Cart</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="UserId" class="form-label">User ID</label>
            <input asp-for="UserId" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="TotalPrice" class="form-label">Total Price</label>
            <input asp-for="TotalPrice" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <input asp-for="Status" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="CreatedDate" class="form-label">Created Date</label>
            <input asp-for="CreatedDate" class="form-control" type="date" required />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>