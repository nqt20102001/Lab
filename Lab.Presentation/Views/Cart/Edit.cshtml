@model Lab.Application.DTOs.CartDTO

<h2>Edit Cart</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="UserId">User ID</label>
        <input asp-for="UserId" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="TotalPrice">Total Price</label>
        <input asp-for="TotalPrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input asp-for="Status" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CreatedDate">Created Date</label>
        <input asp-for="CreatedDate" class="form-control" type="date" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
